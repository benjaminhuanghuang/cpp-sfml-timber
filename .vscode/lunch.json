{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "C++ Launch",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceRoot}/main.exe",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceRoot}",
          "environment": [],
          "externalConsole": true,
          "linux": {
              "MIMode": "gdb"
          },
          "osx": {
              "MIMode": "lldb"
          },
          "windows": {
              "MIMode": "gdb",
              "miDebuggerPath": "c:/mingw32/bin/gdb.exe"
          }
      },
      {
          "name": "C++ Attach",
          "type": "cppdbg",
          "request": "attach",
          "program": "${workspaceRoot}/main.exe",
          "processId": "${command.pickProcess}",
          "linux": {
              "MIMode": "gdb"
          },
          "osx": {
              "MIMode": "lldb"
          },
          "windows": {
              "MIMode": "gdb"
          }
      }
  ]
}
